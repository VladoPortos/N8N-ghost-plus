{
  "name": "n8n-nodes-ghost",
  "version": "0.1.0",
  "description": "n8n node for Ghost CMS",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://n8n.io",
  "author": {
    "name": "Jan Oberhauser",
    "email": "jan@n8n.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n8n-io/n8n.git"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "credentials": [
      "dist/credentials/GhostAdminApi.credentials.js",
      "dist/credentials/GhostContentApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Ghost/Ghost.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "14.17.27",
    "@types/request-promise-native": "~1.0.15",
    "@types/moment-timezone": "^0.5.12",
    "@types/jest": "^27.4.0",
    "eslint-plugin-n8n-nodes-base": "^1.0.29",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "gulp": "^4.0.0",
    "n8n-core": "~0.118.0",
    "typescript": "~4.6.0",
    "tsc-alias": "^1.8.8",
    "n8n-workflow": "~0.100.0"
  },
  "dependencies": {
    "@tryghost/admin-api": "^1.13.4",
    "jsonwebtoken": "^8.5.1",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "moment": "~2.29.2",
    "moment-timezone": "^0.5.28"
  },
  "scripts": {
    "dev": "npm run watch",
    "build": "tsc && gulp build:icons && gulp build:translations",
    "build:translations": "gulp build:translations",
    "format": "cd ../.. && node_modules/prettier/bin-prettier.js packages/nodes-base/**/**.ts --write",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lintfix": "tslint --fix -p tsconfig.json -c tslint.json",
    "lintfix-plugin": "cd ../.. && node_modules/eslint/bin/eslint.js packages/nodes-base/nodes --fix",
    "nodelinter": "nodelinter",
    "watch": "tsc --watch",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost/",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
